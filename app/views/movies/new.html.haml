%h2 Create new movie

= form_tag movies_path do # verb: post, uri: /movies

  = label :movie, :title
  = text_field :movie, :title

  = label :movie, :rating
  = select :movie, :rating, @all_ratings

  = label :movie, :release_date, 'Released On'
  = date_select :movie, :release_date, :start_year => 1930

  = label :movie, :description
  = text_field :movie, :description

  = submit_tag

= link_to "Cancel", movies_path